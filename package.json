{
    "name": "@rohid-hasan/neeramoy-pdf-generator",
    "version": "1.0.9",
    "description": "Neeramoy PDF Generation Engine",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rohid-hasan/neeramoy-pdf-generator.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "build": "node scripts/bundle-templates.js && tsc",
        "dev:bundle": "nodemon --watch src/views --watch src/assets -e ejs,png,svg,jpg --exec \"node scripts/bundle-templates.js\"",
        "dev:tsc": "tsc --watch",
        "dev": "concurrently \"npm run dev:bundle\" \"npm run dev:tsc\"",
        "release": "npm version patch && npm publish"
    },
    "dependencies": {
        "date-fns": "^4.1.0",
        "ejs": "^4.0.1"
    },
    "devDependencies": {
        "@types/ejs": "^3.1.5",
        "@types/node": "^25.0.10",
        "concurrently": "^9.2.1",
        "nodemon": "^3.1.14",
        "prettier": "^3.8.1",
        "prettier-plugin-organize-imports": "^4.3.0",
        "typescript": "^5.9.3"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs"
}

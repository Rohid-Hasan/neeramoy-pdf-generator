 <!-- advices -->
 <% if (prescription.RefferedTo?.referralType || prescription.refferedTo?.division) { %>
 <div class="flex flex-col my-4">
   <div class="text-xl mb-2 font-semibold text-black">Reffered To</div>
   <div class="flex flex-col gap-2">

     <% if (prescription.RefferedTo?.division){ %>
     <!-- Division -->
     <div class="flex flex-col text-sm font-normal dark-light leading-5">
       <div class="flex items-start gap-x-2.5">
         <img src="<%= imageThree %>" class="mt-2" />
         <div class="flex-1 flex items-center gap-2">
           <div class="text-neutral-800 font-semibold text-base">
             Division:
           </div>
           <div class="text-base text-gray-600 font-normal">
             <%= prescription.RefferedTo.division %>
           </div>
         </div>
       </div>
     </div>
     <% } %>

     <% if (prescription.RefferedTo?.referralType){ %>
     <!-- ReferralType -->
     <div class="flex flex-col text-sm font-normal dark-light leading-5">
       <div class="flex items-start gap-x-2.5">
         <img src="<%= imageThree %>" class="mt-2" />
         <div class="flex-1 flex items-center gap-2">
           <div class="text-neutral-800 font-semibold text-base">
             Referral Type:
           </div>
           <div class="text-base text-gray-600 font-normal">
             <%= prescription.RefferedTo.referralType %>
           </div>
         </div>
       </div>
     </div>
     <% } %>

   </div>
 </div>
 <% } %>